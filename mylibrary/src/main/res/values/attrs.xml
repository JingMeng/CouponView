<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CouponView">

        <attr name="drawShapeType">
            <enum name="circle" value="0" />
            <enum name="oval" value="1" />
            <enum name="triangle" value="2" />
            <enum name="square" value="3" />
        </attr>

        <attr name="isDrawLeftShape" format="boolean" />
        <attr name="isDrawRightShape" format="boolean" />
        <attr name="isDrawTopShape" format="boolean" />
        <attr name="isDrawBottomShape" format="boolean" />

        <attr name="isDrawLeftLine" format="boolean" />
        <attr name="isDrawRightLine" format="boolean" />
        <attr name="isDrawTopLine" format="boolean" />
        <attr name="isDrawBottomLine" format="boolean" />

        <attr name="dashGap" format="dimension" />
        <attr name="dashWidth" format="dimension" />
        <attr name="bgc" format="color" />
        <attr name="lineColor" format="color" />
        <attr name="lineWidth" format="dimension" />

        <attr name="lineMarginTop" format="dimension" />
        <attr name="lineMarginBottom" format="dimension" />
        <attr name="lineMarginLeft" format="dimension" />
        <attr name="lineMarginRight" format="dimension" />

    </declare-styleable>
</resources>